page {
  padding-bottom: 100rpx;
}

.UCenter-bg {
  background-image: url(https://images.pexels.com/photos/414586/pexels-photo-414586.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500);
  background-size: cover;
  height: 400rpx;
  display: flex;
  justify-content: center;
  padding-top: 10rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 700;
  text-shadow: 4rpx 4rpx 6rpx #000;
}


.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
  padding-bottom: 20rpx
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: -20rpx;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}


