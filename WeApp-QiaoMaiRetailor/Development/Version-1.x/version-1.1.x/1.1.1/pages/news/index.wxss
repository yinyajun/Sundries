/* 将nav-bar固定在页面顶端，类似吸顶 */

.wux-navbar {
  width: 100%;
  position: fixed;
  height: 80rpx;
  z-index: 500;
  display: flex;
}

wux-tabs {
  width: 100%;
}

.rec {
  width: 100%;
  height: 80rpx;
}

.wux-card-body-text {
  font-size: 30rpx;
  color: #999;
}

.weui-media-box__title {
  font-size: 36rpx;
}

.weui-article__h3 {
  font-size: 30rpx;
}

